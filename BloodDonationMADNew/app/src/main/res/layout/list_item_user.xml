<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blood_event_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:layout_marginEnd="20dp"
    android:padding="@dimen/card_padding"
    app:cardElevation="10dp"
    card_view:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_user_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        
        <TextView
            android:id="@+id/icon_item_txt"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_padding"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/black"
            android:textSize="50dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.384" />

        <TextView
            android:id="@+id/id_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/phoneNo_txt"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"
            android:ems="4"
            android:textSize="14dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/phoneNo_txtView"
            card_view:layout_constraintStart_toEndOf="@+id/phoneNo_txtView"
            card_view:layout_constraintTop_toTopOf="@+id/phoneNo_txtView" />

        <TextView
            android:id="@+id/bloodType_txt"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"
            android:ems="2"
            android:textSize="14dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/blood_type_txtView"
            card_view:layout_constraintStart_toEndOf="@+id/blood_type_txtView"
            card_view:layout_constraintTop_toTopOf="@+id/blood_type_txtView" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            card_view:layout_constraintBottom_toTopOf="@+id/blood_type_txtView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/icon_item_txt"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phoneNo_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Phone:"
            android:textColor="@color/black"
            android:textSize="14dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/bloodType_txt"
            card_view:layout_constraintStart_toEndOf="@+id/bloodType_txt"
            card_view:layout_constraintTop_toTopOf="@+id/bloodType_txt" />

        <TextView
            android:id="@+id/blood_type_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood type:"
            android:textColor="@color/black"
            android:textSize="14dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/name_txtView"
            card_view:layout_constraintTop_toBottomOf="@+id/name_txtView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>